site_name: ShopGuard Chatbot Documentation
site_description: Complete guide for ShopGuard AI chatbot development using Quick App framework
site_author: ShopGuard Team
site_url: https://shopguard-chatbot.readthedocs.io/

# Repository
repo_name: shopguard-chatbot
repo_url: https://github.com/bluelm-shopguard/shopguard-chatbot
edit_uri: edit/main/docs/

# Configuration
theme:
  name: material
  language: zh
  palette:
    # Palette toggle for light mode
    - scheme: default
      primary: blue
      accent: blue
      toggle:
        icon: material/brightness-7
        name: Switch to dark mode
    # Palette toggle for dark mode
    - scheme: slate
      primary: blue
      accent: blue
      toggle:
        icon: material/brightness-4
        name: Switch to light mode
  i18n:
    prev:
      en: Previous
      zh: 上一页
    next:
      en: Next
      zh: 下一页
  features:
    - navigation.tabs
    - navigation.sections
    - navigation.expand
    - navigation.top
    - search.highlight
    - search.share
    - content.code.copy
    - content.code.annotate
    - navigation.footer
    - navigation.tracking
    - toc.follow

# Extensions
markdown_extensions:
  - pymdownx.highlight:
      anchor_linenums: true
  - pymdownx.inlinehilite
  - pymdownx.snippets
  - pymdownx.superfences
  - pymdownx.tabbed:
      alternate_style: true
  - pymdownx.details
  - admonition
  - attr_list
  - def_list
  - tables
  - footnotes
  - md_in_html
  - toc:
      permalink: true

plugins:
  - search
  - minify:
      minify_html: true
  - tags
  - i18n:
      docs_structure: folder
      fallback_to_default: true
      languages:
        - locale: en
          name: English
          build: true
        - locale: zh
          name: 中文
          default: true
          build: true
  - git-revision-date-localized:
      enable_creation_date: true

# Navigation structure
nav:
  - Home / 首页: index.md
  - English Documentation:
      - Home: en/index.md
      - Getting Started:
          - Overview: en/getting-started/overview.md
          - Quick Start: en/getting-started/quick-start.md
          - Environment Setup: en/getting-started/environment-setup.md
          - Web to QuickApp: en/getting-started/web-to-quickapp.md
      - Development:
          - Architecture: en/development/architecture.md
          - Components: en/development/components.md
          - Style Guide: en/development/style-guide.md
          - Best Practices: en/development/best-practices.md
          - Debugging: en/development/debugging.md
      - API Documentation:
          - Overview: en/api/overview.md
          - Backend API: en/api/backend.md
          - OpenAI Compatibility: en/api/openai-compatibility.md
          - Examples: en/api/examples.md
      - Deployment
      - Tutorial
      - Reference:
          - FAQ: en/reference/faq.md
          - Original Guide: en/reference/original-guide.md
  - 中文文档:
      - 首页: zh/index.md
      - 入门指南:
          - 概述: zh/getting-started/overview.md
          - 快速开始: zh/getting-started/quick-start.md
          - 环境设置: zh/getting-started/environment-setup.md
          - 从网页版迁移到快应用: zh/getting-started/web-to-quickapp.md
      - 开发文档:
          - 架构: zh/development/architecture.md
          - 组件库: zh/development/components.md
          - 样式指南: zh/development/style-guide.md
          - 最佳实践: zh/development/best-practices.md
          - 调试技巧: zh/development/debugging.md
      - API 文档:
          - 概述: zh/api/overview.md
          - 后端 API: zh/api/backend.md
          - OpenAI 兼容性: zh/api/openai-compatibility.md
          - 示例: zh/api/examples.md
      - 部署
      - 教程
      - 参考:
          - 常见问题: zh/reference/faq.md
          - 原始指南: zh/reference/original-guide.md

# Customization
extra:
  social:
    - icon: fontawesome/brands/github
      link: https://github.com/bluelm-shopguard/shopguard-chatbot
  alternate:
    - name: English
      link: /en/
      lang: en
    - name: 中文
      link: /zh/
      lang: zh
  generator: false

extra_css:
  - assets/extra.css

