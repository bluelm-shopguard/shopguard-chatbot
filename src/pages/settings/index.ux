}

.option-text {
  font-size: @font-size-medium;
  color: @text-color-secondary;
}

.control-option-selected .option-text {
  font-weight: 700;
  color: @primary-color;
}

/* Toggle Switch Styles */
.toggle-switch {
  width: 96px;
  height: 56px;
  align-items: flex-end;
  justify-content: flex-end;
}

/* Using SVG icons instead of text characters */
</style>
