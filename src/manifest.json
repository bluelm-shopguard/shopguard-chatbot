{
  "package": "com.shopguard.chatbot",
  "name": "ShopGuardAI",
  "versionName": "1.0.0",
  "versionCode": 1,
  "minPlatformVersion": 1060,
  "icon": "common/images/logo.jpeg",
  "features": [
    { "name": "system.prompt" },
    { "name": "system.router" },
    { "name": "system.fetch" },
    { "name": "system.storage" },
    { "name": "system.device" },
    { "name": "system.media" },
    { "name": "system.file" }
  ],
  "permissions": [
    { "origin": "*" },
    { "name": "android.permission.READ_EXTERNAL_STORAGE" },
    { "name": "android.permission.WRITE_EXTERNAL_STORAGE" },
    { "name": "android.permission.CAMERA" }
  ],
  "config": {
    "logLevel": "debug",
    "designWidth": 750,
    "network": {
      "connectTimeout": 30000,
      "readTimeout": 900000,
      "writeTimeout": 180000
    }
  },
  "router": {
    "entry": "pages/home",
    "pages": {
      "pages/home": {
        "component": "index"
      },
      "pages/settings": {
        "component": "index"
      },
      "pages/about": {
        "component": "index"
      }
    }
  },
  "display": {
    "titleBarBackgroundColor": "#ffffff",
    "titleBarTextColor": "#333333",
    "menu": true,
    "pages": {
      "pages/home": {
        "titleBarText": "BlueLM Shopguard"
      },
      "pages/history": {
        "titleBarText": "历史记录"
      },
      "pages/settings": {
        "titleBarText": "设置"
      },
      "pages/about": {
        "titleBarText": "关于我们"
      }
    }
  }
}